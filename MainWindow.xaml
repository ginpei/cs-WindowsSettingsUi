<Window x:Class="WindowsSettingsUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsSettingsUi"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ui:NavigationView PaneTitle="Settings"
                   IsBackButtonVisible="Collapsed"
                   IsSettingsVisible="True">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Icon="Home" Content="Home" />
            <ui:NavigationViewItem Icon="Folder" Content="Projects" />
            <ui:NavigationViewItem>
                <ui:NavigationViewItem.Icon>
                    <ui:SymbolIcon Symbol="Font"/>
                </ui:NavigationViewItem.Icon>
                Fonts
            </ui:NavigationViewItem>
        </ui:NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" />
    </ui:NavigationView>
</Window>
